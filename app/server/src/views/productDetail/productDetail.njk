{% extends  base %}
{% block  content %}

<section class="detail__product h-layout">
    <img src='/media/products/{{productDetails[0].image}}' alt={{productDetails[0].title}}>

    <div class="detail__product__description">
        <h1>{{productDetails[0].title}}</h1>
        <ul>
            <li>
                <span class="description__info">Brand:</span>
                <span>{{productDetails[0].brand}}</span>
            </li>
            <li>
                <span class="description__info">Price:</span>
                <span>{{productDetails[0].price}}</span>
            </li>
            <li>
                <span class="description__info">Colors:</span>
                {% for productColor in productColors %}
                    <span class="description__colors" style="background: #{{productColor.color}}"></span>
                {% endfor %}
            </li>
        </ul>

        <p>{{productDetails[0].description}}</p>

        <div class="detail__product__description__call-to-action">
            <button class="primary-button add">Add to bag</button>
            <button class="secondary-button wishlist">
                <svg xmlns="http://www.w3.org/2000/svg" width="28.564" height="25"><path d="M25.573 1.803a8.4 8.4 0 00-11.292.837A8.4 8.4 0 002.99 1.803a8.441 8.441 0 00-.59 12.341l9.785 9.969a2.93 2.93 0 004.2.006l9.785-9.969a8.447 8.447 0 00-.597-12.347zm-1.317 10.46l-9.785 9.969a.229.229 0 01-.379 0l-9.785-9.968a5.753 5.753 0 01.407-8.407 5.656 5.656 0 017.615.586l1.953 1.992 1.953-1.992a5.652 5.652 0 017.615-.591 5.778 5.778 0 01.407 8.412z" fill="#f1f1f1"/></svg>
            </button>
        </div>
    </div>
</section>

<section class="detail__specifications h-layout">
    <h2>Specifications</h2>

    {% if productSuperlatives.length > 0 %}
        <div class="detail__superlatives">
            <img class="detail__superlatives__image" src="/media/superlatives/watch-specs.svg" alt="product superlatives">
        
            <ul class="detail__superlatives__list">
                {% for productSuperlative in productSuperlatives %}
                    <li>
                        <img src="/media/superlatives/{{productSuperlative.img}}">
                        <span>{{productSuperlative.superlative}}</span>
                    </li>
                {% endfor %}
            </ul>
        </div>
    {% endif %}

    <article class="detail__general">
        <div class="dropdown" id="dropdown__general">
            <h3>General</h3>
            <svg xmlns="http://www.w3.org/2000/svg" width="24" height="5.143"><path data-name="Icon awesome-minus" d="M22.286 0H1.714A1.714 1.714 0 000 1.714v1.714a1.714 1.714 0 001.714 1.714h20.572A1.714 1.714 0 0024 3.429V1.714A1.714 1.714 0 0022.286 0z" fill="#fff"/></svg>            
        </div>

        <div class="detail__general__info">

            <div class="general__flex-container">
                {% if productDetails[0].watch_length %}
                    <span class="specifications__info">Watch length</span>
                    <span>{{ productDetails[0].watch_length }} mm </span>
                {% endif %}
            </div>
            <div class="general__flex-container">
                {% if productDetails[0].watch_width %}
                    <span class="specifications__info">Watch width</span>
                    <span>{{ productDetails[0].watch_width }} mm </span>
                {% endif %}
            </div>
            <div class="general__flex-container">
                {% if productDetails[0].case_material %}
                    <span class="specifications__info">Case material</span>
                    <span>{{ productDetails[0].case_material }} </span>
                {% endif %}
            </div>
            <div class="general__flex-container">
                {% if productDetails[0].case_width %}
                    <span class="specifications__info">Case width</span>
                    <span>{{ productDetails[0].case_width }} mm</span>
                {% endif %}
            </div>
            <div class="general__flex-container">
                {% if productDetails[0].case_length %}
                    <span class="specifications__info">Case length</span>
                    <span>{{ productDetails[0].case_length }} mm</span>
                {% endif %}
            </div>
            <div class="general__flex-container">
                {% if productDetails[0].case_thickness %}
                    <span class="specifications__info">Case thickness</span>
                    <span>{{ productDetails[0].case_thickness }} mm</span>
                {% endif %}
            </div>
            <div class="general__flex-container">
                {% if productDetails[0].case_shape %}
                    <span class="specifications__info">Case thickness</span>
                    <span>{{ productDetails[0].case_shape }} </span>
                {% endif %}
            </div>
            <div class="general__flex-container">
                {% if productDetails[0].glass_material %}
                    <span class="specifications__info">Glass material</span>
                    <span>{{ productDetails[0].glass_material }} </span>
                {% endif %}
            </div>
            <div class="general__flex-container">
                {% if productDetails[0].glass_opening_diameter %}
                    <span class="specifications__info">Glass diameter</span>
                    <span>{{ productDetails[0].glass_opening_diameter }} mm</span>
                {% endif %}
            </div>
            <div class="general__flex-container">
                {% if productDetails[0].band_material %}
                    <span class="specifications__info">Band material</span>
                    <span>{{ productDetails[0].band_material }}</span>
                {% endif %}
            </div>
            <div class="general__flex-container">
                {% if productDetails[0].band_width %}
                    <span class="specifications__info">Band width</span>
                    <span>{{ productDetails[0].band_width }} mm</span>
                {% endif %}
            </div>
            <div class="general__flex-container">
                {% if productDetails[0].band_length %}
                    <span class="specifications__info">Band length</span>
                    <span>{{ productDetails[0].band_length }} mm</span>
                {% endif %}
            </div>
            <div class="general__flex-container">
                {% if productDetails[0].circumference_range %}
                    <span class="specifications__info">Circumference range</span>
                    <span>{{ productDetails[0].circumference_range }} mm</span>
                {% endif %}
            </div>
            <div class="general__flex-container">
                {% if productDetails[0].movement_type %}
                    <span class="specifications__info">Movement type</span>
                    <span>{{ productDetails[0].movement_type }}</span>
                {% endif %}
            </div>
            <div class="general__flex-container">
                {% if productDetails[0].battery %}
                    <span class="specifications__info">Battery</span>
                    <span>{{ productDetails[0].battery }}</span>
                {% endif %}
            </div>
            <div class="general__flex-container">
                {% if productDetails[0].battery_life %}
                    <span class="specifications__info">Battery life</span>
                    <span>{{ productDetails[0].battery_life }} months</span>
                {% endif %}
            </div>
            <div class="general__flex-container">
                {% if productDetails[0].weight %}
                    <span class="specifications__info">Weight</span>
                    <span>{{ productDetails[0].weight }} g</span>
                {% endif %}
