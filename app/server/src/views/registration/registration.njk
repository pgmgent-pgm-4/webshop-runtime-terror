
{% extends  base %}
{% block  content %}


<form id="registrationForm" action="/auth/register">
    <label for="username">
        Username
        <input type="text"  name="username" id="username" required>
    </label>
    <label for="email">
        Email
        <input type="email" name="email" id="email" required>
    </label>
    <label for="password">
        password (min 10 characters)
        <input type="password" name="password" id="password" required>
    </label>
    <button id="registrationButton">Send</button>
</form>
            
{% endblock %}